email:
  smtp_host: smtp.gmail.com
  smtp_port: 587
  use_tls: true
  username: your-email@example.com
  password: your-app-password
  recipients:
  - admin@example.com
  - security-team@example.com

detection:
  network_interface: "Wi-Fi"  # Windows: "Wi-Fi" or "Ethernet", Linux: "eth0" or "wlan0"
  port_scan_threshold: 12
  icmp_scan_threshold: 5
  brute_force_threshold: 5

logging:
  log_level: INFO
  log_file: ids.log
  max_log_size_mb: 100
  backup_count: 5

notification:
  batch_window_seconds: 300
  batch_threshold: 3
  retry_attempts: 3
  retry_delay_seconds: 10
